# Enterprise AI Agent Platform - Environment Variables

# Cohere API Key (required)
COHERE_API_KEY=your_cohere_api_key_here

# Application Settings
APP_NAME="Enterprise AI Agent Platform"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Model Configuration
EMBEDDING_MODEL=embed-english-v3.0
RERANK_MODEL=rerank-english-v3.0
GENERATION_MODEL=command-r-plus

# Agent Settings
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=120

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Vector Store (for production, configure your preferred provider)
# PINECONE_API_KEY=your_pinecone_key
# PINECONE_ENVIRONMENT=your_environment
# WEAVIATE_URL=http://localhost:8080
